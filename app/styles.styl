body
html
  height: 100%
  margin: 0
  padding: 0

body
  background: #dddddd


.map
  width: 100%
  height: 100%
  position: fixed !important
  top: 0

.table-main
  min-height: 56px
  width: 666px
  display: block
  color: #fff
  margin: 0 auto
  position: relative
  z-index: 1
  padding: 0 30px
  background: rgba(0,0,0,0.6)
  transition: height 300ms ease

.table-toggler
  text-align: justify

  &:after
    display: inline-block
    content: ''
    width: 100%


.table-info
.table-label
  display: inline-block

.table-label
  background: rgba(255, 153, 0, 0.65)
  border-radius: 5px
  height: 30px
  width: 150px
  padding: 5px
  line-height: 30px
  cursor: pointer

  &.active
    &:after
      background: rgba(0, 255, 0, 0.65)
  span
    vertical-align: middle

  &:after
    content: ""
    display: inline-block
    border-radius: 50%
    vertical-align: middle
    width: 30px
    height: 30px
    background: rgba(255, 0, 0, 0.65)

#table-id
  display: none


.table-content
  width: 100%
  text-align: center

  td:first-child
    text-align: left
  .options
    color: #fff
    cursor: pointer
    padding-right: 5px
  .active
    color: rgb(66, 0, 255)
